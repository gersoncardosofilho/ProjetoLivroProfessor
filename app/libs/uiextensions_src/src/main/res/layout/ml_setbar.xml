<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/ux_text_color_title_light"
    android:gravity="center"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/ml_ll_page"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:gravity="center"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/ml_tv_singlepage"
            android:layout_width="0dip"
            android:layout_height="wrap_content"
            android:layout_marginBottom="15dp"
            android:layout_marginTop="15dp"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:layout_weight="1"
            android:background="@drawable/ml_tv_top_bg_selector"
            android:ellipsize="end"
            android:gravity="center"
            android:maxLines="1"
            android:text="@string/rv_page_present_single"
            android:textColor="@color/ml_tv_top_text_selector"
            android:textSize="12dp" />

        <TextView
            android:id="@+id/ml_tv_conpage"
            android:layout_width="0dip"
            android:layout_height="wrap_content"
            android:layout_marginBottom="15dp"
            android:layout_marginTop="15dp"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:layout_weight="1"
            android:background="@drawable/ml_tv_top_bg_selector"
            android:ellipsize="end"
            android:gravity="center"
            android:padding="5dp"
            android:maxLines="1"
            android:text="@string/rv_page_present_continuous"
            android:textColor="@color/ml_tv_top_text_selector"
            android:textSize="12dp" />

        <TextView
            android:id="@+id/ml_tv_thumbs"
            android:layout_width="0dip"
            android:layout_height="wrap_content"
            android:layout_marginBottom="15dp"
            android:layout_marginTop="15dp"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:layout_weight="1"
            android:background="@drawable/ml_tv_top_bg_selector"
            android:ellipsize="end"
            android:gravity="center"
            android:padding="5dp"
            android:maxLines="1"
            android:text="@string/rv_page_present_thumbnail"
            android:textColor="@color/ml_tv_top_text_selector"
            android:textSize="12dp" />
    </LinearLayout>

    <ImageView
        android:id="@+id/ml_iv_page_divider"
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:scaleType="fitXY"
        android:src="@color/ux_color_seperator_gray" />

    <LinearLayout
        android:id="@+id/ml_ll_light"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/ux_horz_left_margin_phone"
        android:layout_marginRight="@dimen/ux_horz_left_margin_phone"
        android:gravity="bottom|center"
        android:orientation="horizontal">

        <LinearLayout
            android:id="@+id/ml_ll_syslight"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginBottom="15dp"
            android:layout_marginTop="15dp"
            android:gravity="center_vertical"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="left|center_vertical"
                    android:layout_weight="1"
                    android:text="@string/ml_system_light"
                    android:textColor="@color/ux_text_color_body2_dark"
                    android:textSize="@dimen/ux_text_height_button" />

                <ImageView
                    android:id="@+id/ml_iv_syslight"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="right|center_vertical"
                    android:paddingLeft="5dp"
                    android:paddingRight="5dp"
                    android:src="@drawable/setting_off" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/ml_iv_light_small"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ml_light_small" />

                <SeekBar
                    android:id="@+id/ml_sb_light"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:max="255"
                    android:maxHeight="1.5dp"
                    android:minHeight="1.5dp"
                    android:paddingLeft="20dp"
                    android:paddingRight="20dp"
                    android:progressDrawable="@drawable/ml_seekbar_bg"
                    android:thumb="@drawable/ml_seekbar_thumb_bt_selector" />

                <ImageView
                    android:id="@+id/ml_iv_light_big"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="5dp"
                    android:src="@drawable/ml_light_big" />

                <ImageView
                    android:id="@+id/ml_iv_daynight_divider"
                    android:layout_width="1dp"
                    android:layout_height="25dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:src="@color/ux_color_seperator_gray" />
            </LinearLayout>
        </LinearLayout>


        <ImageView
            android:id="@+id/ml_iv_daynight"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="10dp"
            android:layout_marginBottom="15dp"
            android:layout_marginTop="15dp"
            android:src="@drawable/ml_daynight_day_selector" />
    </LinearLayout>

    <ImageView
        android:id="@+id/ml_iv_light_divider"
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:scaleType="fitXY"
        android:src="@color/ux_color_seperator_gray" />

    <LinearLayout
        android:id="@+id/ml_ll_bottom"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1">
        </LinearLayout>

        <LinearLayout
            android:id="@+id/ml_ll_reflow"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="3"
            android:gravity="center"
            android:layout_marginBottom="15dp"
            android:layout_marginTop="15dp"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/ml_iv_reflow"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/ml_iv_circle_bg_selector"
                android:scaleType="center"
                android:src="@drawable/ml_iv_reflow_selector" />

            <TextView
                android:id="@+id/ml_tv_reflow"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:text="@string/rd_reflow_topbar_title"
                android:textColor="@color/ux_text_color_body2_dark"
                android:textSize="12dp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/ml_ll_crop"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="3"
            android:gravity="center"
            android:layout_marginBottom="15dp"
            android:layout_marginTop="15dp"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/ml_iv_crop"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/ml_iv_circle_bg_selector"
                android:scaleType="center"
                android:src="@drawable/ml_iv_crop_selector" />

            <TextView
                android:id="@+id/ml_tv_crop"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:text="@string/rd_crop_topbar_title"
                android:textColor="@color/ux_text_color_body2_dark"
                android:textSize="12dp" />
        </LinearLayout>

        <LinearLayout
        android:id="@+id/ml_ll_lockscreen"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="3"
        android:gravity="center"
        android:layout_marginBottom="15dp"
        android:layout_marginTop="15dp"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/ml_iv_lockscreen"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/ml_iv_circle_bg_selector"
            android:scaleType="center"
            android:src="@drawable/ml_iv_lockscreen_selector" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:text="@string/rv_screen_rotation_pad"
            android:textColor="@color/ux_text_color_body2_dark"
            android:textSize="12dp" />
    </LinearLayout>

        <LinearLayout
            android:id="@+id/ml_ll_facingmode"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="3"
            android:gravity="center"
            android:layout_marginBottom="15dp"
            android:layout_marginTop="15dp"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/ml_iv_facingmode"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/ml_iv_circle_bg_selector"
                android:scaleType="centerInside"
                android:src="@drawable/ml_iv_facingmode_selector" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:text="@string/rd_facingmode_topbar_title"
                android:textColor="@color/ux_text_color_body2_dark"
                android:textSize="12dp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"></LinearLayout>
    </LinearLayout>

</LinearLayout>
