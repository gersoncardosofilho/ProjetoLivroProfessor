<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center"
    android:orientation="vertical">

    <HorizontalScrollView
        android:id="@+id/ml_tablet_hsv_all"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:focusable="true"
            android:focusableInTouchMode="true"
            android:gravity="center"
            android:orientation="vertical"
            android:padding="5dp">

            <LinearLayout
                android:id="@+id/ml_tablet_ll_page"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="horizontal"
                android:paddingBottom="10dp"
                android:paddingTop="10dp">

                <LinearLayout
                    android:id="@+id/ml_tablet_ll_singlepage"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/ml_tablet_iv_singlepage"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/ml_iv_circle_bg_selector"
                        android:scaleType="center"
                        android:src="@drawable/ml_iv_singlepage_pad_selector" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:text="@string/rv_page_present_single"
                        android:textColor="@color/ux_color_dark"
                        android:textSize="@dimen/ux_text_height_body2" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/ml_tablet_ll_conpage"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="30dp"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/ml_tablet_iv_conpage"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/ml_iv_circle_bg_selector"
                        android:scaleType="center"
                        android:src="@drawable/ml_iv_conpage_pad_selector" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:text="@string/rv_page_present_continuous"
                        android:textColor="@color/ux_color_dark"
                        android:textSize="@dimen/ux_text_height_body2" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/ml_tablet_ll_facing"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="30dp"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/ml_tablet_iv_facing"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/ml_iv_circle_bg_selector"
                        android:scaleType="center"
                        android:src="@drawable/ml_iv_facingmode_selector" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:text="@string/rd_facingmode_topbar_title"
                        android:textColor="@color/ux_color_dark"
                        android:textSize="@dimen/ux_text_height_body2" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/ml_tablet_ll_thumbs"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="30dp"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/ml_tablet_iv_thumbs"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/ml_iv_circle_bg_selector"
                        android:scaleType="center"
                        android:src="@drawable/ml_iv_thumbnail_pad_selector" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:text="@string/rv_page_present_thumbnail"
                        android:textColor="@color/ux_color_dark"
                        android:textSize="@dimen/ux_text_height_body2" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/ml_tablet_ll_reflow"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="30dp"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/ml_tablet_iv_reflow"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/ml_iv_circle_bg_selector"
                        android:scaleType="center"
                        android:src="@drawable/ml_iv_reflow_selector" />

                    <TextView
                        android:id="@+id/ml_tablet_tv_reflow"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:text="@string/rd_reflow_topbar_title"
                        android:textColor="@color/ux_color_dark"
                        android:textSize="@dimen/ux_text_height_body2" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/ml_tablet_ll_crop"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="30dp"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/ml_tablet_iv_crop"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/ml_iv_circle_bg_selector"
                        android:scaleType="center"
                        android:src="@drawable/ml_iv_crop_selector" />

                    <TextView
                        android:id="@+id/ml_tablet_tv_crop"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:text="@string/rd_crop_topbar_title"
                        android:textColor="@color/ux_color_dark"
                        android:textSize="@dimen/ux_text_height_body2" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/ml_tablet_ll_lockscreen"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="30dp"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/ml_tablet_iv_lockscreen"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/ml_iv_circle_bg_selector"
                        android:scaleType="center"
                        android:src="@drawable/ml_iv_lockscreen_selector" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:text="@string/rv_screen_rotation_pad"
                        android:textColor="@color/ux_color_dark"
                        android:textSize="@dimen/ux_text_height_body2" />
                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/ml_tablet_ll_light"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="horizontal"
                android:paddingBottom="10dp"
                android:paddingTop="10dp">

                <LinearLayout
                    android:id="@+id/ml_tablet_ll_syslight"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/ml_system_light"
                        android:textColor="@color/ux_color_dark"
                        android:textSize="@dimen/ux_text_height_body2" />

                    <ImageView
                        android:id="@+id/ml_tablet_iv_syslight"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="20dp"
                        android:paddingBottom="5dp"
                        android:paddingTop="5dp"
                        android:src="@drawable/setting_off" />

                    <ImageView
                        android:layout_width="1dp"
                        android:layout_height="30dp"
                        android:layout_marginLeft="15dp"
                        android:layout_marginRight="15dp"
                        android:src="@color/ux_color_seperator_gray" />

                    <ImageView
                        android:id="@+id/ml_tablet_iv_light_small"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/ml_light_small" />

                    <SeekBar
                        android:id="@+id/ml_tablet_sb_light"
                        android:layout_width="200dp"
                        android:layout_height="wrap_content"
                        android:max="255"
                        android:maxHeight="1.5dp"
                        android:minHeight="1.5dp"
                        android:paddingBottom="10dp"
                        android:paddingLeft="20dp"
                        android:paddingRight="20dp"
                        android:paddingTop="10dp"
                        android:progressDrawable="@drawable/ml_seekbar_bg"
                        android:thumb="@drawable/ml_seekbar_thumb_bt_selector" />

                    <ImageView
                        android:id="@+id/ml_tablet_iv_light_big"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="2dp"
                        android:layout_marginRight="5dp"
                        android:src="@drawable/ml_light_big" />
                </LinearLayout>

                <ImageView
                    android:id="@+id/ml_tablet_iv_light_divider"
                    android:layout_width="1dp"
                    android:layout_height="30dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:src="@color/ux_color_seperator_gray" />

                <ImageView
                    android:id="@+id/ml_tablet_iv_daynight"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="5dp"
                    android:src="@drawable/ml_daynight_day_selector" />
            </LinearLayout>
        </LinearLayout>

    </HorizontalScrollView>

</LinearLayout>
